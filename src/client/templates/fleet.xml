<?xml version="1.0" encoding="UTF-8"?>
<templates xmlns="http://www.w3.org/1999/xhtml">
	<template id="index">
		<li>
			<a href="#" s_attr="Name" s_link="clicked"/>
		</li>
	</template>
	
	<template id="summary">
		<tr>
			<td class="heading" colspan="3">
				<h1><a href="#" s_attr="Name" s_link="details"/></h1>
			</td>
		</tr>
	</template>
	
	<template id="details.invisible">
		<tr>
			<td colspan="2">
				<h1>
					<span s_attr="Name"/> (#<span s_attr="Oid"/>)
				</h1>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				This fleet is not currently visible to any of your sensors.
			</td>
		</tr>
	</template>
	
	<template id="details">
		<tr>
			<td colspan="2">
				<h1>
					<span s_attr="Name"/> (#<span s_attr="Oid"/>)
				</h1>
			</td>
		</tr>
		<tr>
			<th>
				Total mass
				<help template="unit.mass_help"/>
			</th>
			<td>
				<span s_attr="Mass"/> tonnes
			</td>
		</tr>
		<tr>
			<th>
				Total upkeep/hr
				<help template="unit.upkeep_help"/>
			</th>
			<td>
				<span s_attr="MaintenanceCostM"/> metal,
				<span s_attr="MaintenanceCostA"/> antimatter,
				<span s_attr="MaintenanceCostO"/> organic
			</td>
		</tr>
		<tr>
			<td colspan="2">
				For the contents of this fleet, see the <a href="#"
				s_link="show_summary">star summary page</a>.
			</td>
		</tr>			
		<tr>
			<td colspan="2">
				<h1>
					Jump controls
				</h1>
			</td>
		</tr>
		<tr>
			<th>
				Current location
				<help>
					<p>
						The current location of this fleet.
					</p>
				</help>
			</th>
			<td>
				<span class="current"/>
				<a href="#" class="inline-icon" s_link="current_map">
					<span class="ui-icon ui-icon-arrow-4-diag"/>
				</a>
			</td>
		</tr>
		<tr>
			<th>
				Selected target
				<help>
					<p>
						Where the fleet is currently configured to jump to.
					</p>
				</help>
			</th>
			<td>
				[<span s_attr="TargetX"/>, <span s_attr="TargetY"/>] 
				<a href="#" class="inline-icon" s_link="target_map">
					<span class="ui-icon ui-icon-arrow-4-diag"/>
				</a>
			</td>
		</tr>
		<tr>
			<th> </th>
			<td>
				<input type="button" s_link="copy_from_map" value="Copy from map"/>
			</td>
		</tr>
		<tr>
			<th>
				Distance to target
				<help>
					<p>
						The distance from here to the target coordinates.
					</p>
				</help>
			</th>
			<td>
				<span class="distance"/> parsecs
			</td>
		</tr>
		<tr>
			<th>
				Time to target
				<help>
					<p>
						How long this jump will take.
					</p>
				</help>
			</th>
			<td>
				<span class="time"/> hours
			</td>
		</tr>
		<tr>
			<th>
				Antimatter reqd
				<help>
					<p>
						The amount of antimatter this jump will consume. The
						antimatter must be available from cargoships in this fleet.
					</p>
				</help>
			</th>
			<td>
				<span class="antimatter"/>
			</td>
		</tr>
		<tr>
			<th> </th>
			<td>
				<input type="button" s_link="jump" value="Jump"/>
			</td>
		</tr>
	</template>
</templates>