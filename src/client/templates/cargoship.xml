<?xml version="1.0" encoding="UTF-8"?>
<templates xmlns="http://www.w3.org/1999/xhtml">
	<template id="cargo">
		<span>
			<span s_attr="CargoM.i"/> metal,
			<span s_attr="CargoA.i"/> antimatter,
			<span s_attr="CargoO.i"/> organic
		</span>
	</template>
		
	<template id="resources">
		<th>
			Available
			<help>
				<p>
					This indicates how much resources are available for pickup in orbit
					around the current star.
				</p>
			</help>
		</th>
		<td class="centre" s_attr="ResourcesM.i"/>
		<td class="centre" s_attr="ResourcesA.i"/>
		<td class="centre" s_attr="ResourcesO.i"/>
	</template>
	
	<template id="details">
		<tr>
			<td colspan="9">
				<h1>Cargo controls</h1>
			</td>
		</tr>
		<tr>
			<td> </td>
			<th class="centre">Metal</th>
			<th class="centre">Antimatter</th>
			<th class="centre">Organics</th>
		</tr>
		<tr>
			<th>
				Cargo
				<help>
					<p>
						Cargoships can carry any amount of metal, organics or antimatter.
						The more they carry, the larger the mass of the ship.
					</p>
				</help>
			</th>
			<td class="centre" s_attr="CargoM.i"/>
			<td class="centre" s_attr="CargoA.i"/>
			<td class="centre" s_attr="CargoO.i"/>
		</tr>
		<tr>
			<th> </th>
			<td colspan="9" class="centre">
				<input type="button" value="↑ Load ↑" s_link="load"/>
			</td>
		</tr>
		<tr>
			<th class="right">
				<help>
					<p>
						Sets the amount of cargo to load or unload to a
						percentage of the current amount of cargo.
					</p>
				</help>
			</th>
			<td colspan="9" class="centre small">
				<a href="#" s_link="cargo_0">0%</a>
				<a href="#" s_link="cargo_25">25%</a>
				<a href="#" s_link="cargo_50">50%</a>
				<a href="#" s_link="cargo_75">75%</a>
				<a href="#" s_link="cargo_100">100%</a>
			</td>
		</tr>
		<tr>
			<th class="right">
				<help>
					<p>
						Enter the amount of cargo you want to load or unload
						here, and then press the appropriate button. The
						percentages above and below will set the amount to
						a proportion of the ship's cargo, or the amount of
						available resources in the system. 
					</p>
					<p>
						Nothing	will happen until you press <b>Load</b> or <b>Unload</b>.
					</p> 
				</help>
			</th>
			<td>
				<input id="cargoshipmetal" type="text" class="maxwidth centre"/>
			</td>
			<td>
				<input id="cargoshipantimatter" type="text" class="maxwidth centre"/>
			</td>
			<td>
				<input id="cargoshiporganics" type="text" class="maxwidth centre"/>
			</td>
		</tr>
		<tr>
			<th class="right">
				<help>
					<p>
						Sets the amount of cargo to load or unload to a
						percentage of the current amount of resources available
						in this star system.
					</p>
				</help>
			</th>
			<td colspan="9" class="centre small">
				<a href="#" s_link="available_0">0%</a>
				<a href="#" s_link="available_25">25%</a>
				<a href="#" s_link="available_50">50%</a>
				<a href="#" s_link="available_75">75%</a>
				<a href="#" s_link="available_100">100%</a>
			</td>
		</tr>
		<tr>
			<th> </th>
			<td colspan="9" class="centre">
				<input type="button" value="↓ Unload ↓" s_link="unload"/>
			</td>
		</tr>
		<tr class="available"/>
	</template>
</templates>