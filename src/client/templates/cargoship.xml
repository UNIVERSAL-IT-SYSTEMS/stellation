<?xml version="1.0" encoding="UTF-8"?>
<templates xmlns="http://www.w3.org/1999/xhtml">
	<template id="cargo">
		<span>
			<span s_attr="CargoM"/> metal,
			<span s_attr="CargoA"/> antimatter,
			<span s_attr="CargoO"/> organic
		</span>
	</template>
		
	<template id="resources">
		<span>
			<span s_attr="ResourcesM"/> metal,
			<span s_attr="ResourcesA"/> antimatter,
			<span s_attr="ResourcesO"/> organic
		</span>
	</template>
	
	<template id="details">
		<tr>
			<td colspan="3">
				<h1>Cargo controls</h1>
			</td>
		</tr>
		<tr>
			<td>
				Cargo
				<help>
					<p>
						Cargoships can carry any amount of metal, organics or antimatter.
						The more they carry, the larger the mass of the ship.
					</p>
				</help>
			</td>
			<td>
				<span s_attr="CargoM"/> metal,
				<span s_attr="CargoA"/> antimatter,
				<span s_attr="CargoO"/> organic
			</td>
		</tr>
		<tr>
			<td>
				Available
				<help>
					<p>
						This indicates how much resources are available for pickup in orbit
						around the current star.
					</p>
				</help>
			</td>
			<td class="available"/>
		</tr>
		<tr>
			<td> </td>
			<td>
				<input type="button" value="Load all"/>
				<input type="button" value="Unload all"/>
			</td>
		</tr>
	</template>
</templates>