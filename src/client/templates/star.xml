<?xml version="1.0" encoding="UTF-8"?>
<templates xmlns="http://www.w3.org/1999/xhtml">
	<template id="index">
		<li>
			<span s_attr="showName"/> [<span s_attr="X"/>, <span s_attr="Y"/>]
			<ul class="content"/>
		</li>
	</template>
	
	<template id="name">
		<a href="#" s_attr="Name" s_link="summary"/>
		<a href="#" class="inline-icon" s_link="map">
			<span class="ui-icon ui-icon-arrow-4-diag"/>
		</a>
	</template>
	
	<template id="summary.invisible">
		<div>
			<img class="starimage"/>
			<b>Coordinates: </b>[<span s_attr="X"/>, <span s_attr="Y"/>]<br/>
	
			<p class="maincontent">
				This location is no longer visible to your sensors.
			</p>
		</div>
	</template>
	
	<template id="debris">
		<b>Debris: </b><span s_attr="Debris.i"/> tonnes
	</template>
	
	<template id="summary">
		<div>
			<img class="starimage"/>
			<b>Name: </b><span s_attr="showName"/><br/>
			<b>Coordinates: </b>[<span s_attr="X"/>, <span s_attr="Y"/>]<br/>
			<b>Brightness: </b><span s_attr="Brightness"/><br/>
			<b>Asteroids: </b><span s_attr="AsteroidsC"/> carbonaceous,
				<span s_attr="AsteroidsM"/> metallic<br/>
			<b>Free resources: </b><span s_attr="ResourcesM.i"/> metal,
				<span s_attr="ResourcesA.i"/> antimatter,
				<span s_attr="ResourcesO.i"/> organics<br/>
			<span class="star_summary_debris"/>
	
			<table class="star_summary_content"/>
		</div>
	</template>
</templates>